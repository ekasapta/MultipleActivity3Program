<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCalculator"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:background="@drawable/button_primary"
        android:text="Kalkulator Sederhana"
        android:textAllCaps="false"
        android:textColor="#161b22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <Button
        android:id="@+id/btnMinMax"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:background="@drawable/button_warning"
        android:text="Pencarian Nilai Min/Max"
        android:textAllCaps="false"
        android:textColor="#161b22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <Button
        android:id="@+id/btnPythagoras"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:background="@drawable/button_danger"
        android:text="Perhitungan Pythagoras"
        android:textAllCaps="false"
        android:textColor="#161b22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

</androidx.constraintlayout.widget.ConstraintLayout>